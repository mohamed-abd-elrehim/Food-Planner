<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State for when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/startScreenBackgroundColor"/> <!-- Background color -->
            <corners android:radius="500dp"/> <!-- Large radius to create a circle -->
            <stroke android:width="2dp" android:color="@android:color/black"/> <!-- Border color -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Background color -->
            <corners android:radius="500dp"/> <!-- Large radius to create a circle -->
            <stroke android:width="2dp" android:color="@android:color/black"/> <!-- Border color -->
        </shape>
    </item>
</selector>
