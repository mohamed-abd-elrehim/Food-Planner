<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Player Photo -->

    <!-- Player Name -->

    <!-- Player Email -->

    <!-- Logout Button -->

    <TextView
        android:id="@+id/player_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Player Name"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/player_profile_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/player_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/player_profile_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player_profile_image"
        android:layout_width="167dp"
        android:layout_height="148dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/profile_image"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/player_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Log Out"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/player_Backup_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/player_Backup_button"
        app:layout_constraintTop_toBottomOf="@+id/player_Backup_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/player_Backup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/backup"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="@+id/player_Restore_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/player_Restore_button"
        app:layout_constraintTop_toBottomOf="@+id/player_Restore_button" />

    <Button
        android:id="@+id/player_Restore_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/restore"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="@+id/player_profile_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/player_profile_email"
        app:layout_constraintTop_toBottomOf="@+id/player_profile_email" />

    <TextView
        android:id="@+id/player_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="player@example.com"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/player_profile_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/player_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/player_profile_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
